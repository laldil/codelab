    </form>
    <form action="/admin/addDrinks" method="POST">
        <h3>Add drinks</h3>
        <input type="text" name="drinksTitle" placeholder="title">
        <input type="text" name="drinksPrice" placeholder="description">
        <input type="text" name="drinksImg" placeholder="url">
        <button type="submit"> Create </button>
    </form>
</section>
</body>
</html>